{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "resources/src/*"
      ],
      "@enums/*": [
        "resources/src/enums/*"
      ],
      "@piniaPlugins/*": [
        "resources/src/store/plugins/*"
      ],
      "@helpers": [
        "resources/src/utils/helpers.js"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "exclude": [
    "node_modules",
    "public"
  ],
  "include": [
    "./resources/src/**/*"
  ]
}
